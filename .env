# Flask Application Configuration
# Environment can be: development, production, testing
FLASK_ENV=development

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
FLASK_DEBUG=true

# Alternative PORT variable (used as fallback)
# PORT=8000

# Security Configuration
# IMPORTANT: Generate a strong, unique secret key for production!
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production-f9bf78b9a18ce6d46a0cd2b0b86df9da

# CSRF Protection (True/False)
WTF_CSRF_ENABLED=true

# Database Configuration
# For SQLite (default): sqlite:///path/to/database.db
# For PostgreSQL: postgresql://username:password@localhost/dbname
# For MySQL: mysql://username:password@localhost/dbname
# DATABASE_URL=sqlite:///manga_app.db

# File Upload Configuration
# Maximum file size in bytes (default: 16MB)
MAX_CONTENT_LENGTH=16777216

# Application Settings
# Number of items to display per page
ITEMS_PER_PAGE=25

# Logging Configuration
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FILE=logs/manga_app.log

# Production-only settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=your-super-secret-production-key-here
# DATABASE_URL=postgresql://username:password@localhost/manga_production_db